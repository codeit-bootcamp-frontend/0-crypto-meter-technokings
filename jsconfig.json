{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "@": ["./src"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "include": ["src/**/*"]
}
